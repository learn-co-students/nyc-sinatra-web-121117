<h1><%= @figure.name %></h1>

<h3>Landmarks:</h3>

  <ul>
    <% @figure.landmarks.each do |l| %>
      <li><%= l.name %></li>
    <% end %>
  </ul>

  <h3>Titles:</h3>

    <ul>
      <% @figure.titles.each do |t| %>
        <li><%= t.name %></li>
      <% end %>
    </ul>

    <h3>Would you like to edit or delete this figure?<span><a href="/figures/<%= @figure.id %>/edit"> Click Here</a></span></h3>
