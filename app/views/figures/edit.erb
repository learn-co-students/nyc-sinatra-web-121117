<form action="/figures/<%= @figure.id %>" method="post">
  <input type="hidden" name="_method" value="patch"/>
  <input type="text" name="figure[name]" value="<%= @figure.name %>"/>
  <input type="submit" value="edit"/>
  <h2>Landmarks</h2>
  <% @landmarks.each do |landmark| %>
    <p>
      <input type="checkbox" id="<%= landmark.id %>" name="figure[landmark]" value="<%= landmark.name %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
      <label for="<%= landmark.id %>"><%= landmark.name %></label>
    </p>
  <% end %>
  <input type="checkbox" id="new" name="figure[landmark]" />
  <label for="new"><input type="text" name="figure[landmark]" placeholder="New Landmark"/></label>
  <h2>Titles</h2>
  <% @titles.each do |title| %>
    <p>
      <input type="checkbox" id="<%= title.id %>" name="figure[title]" value="<%= title.name %>" <%='checked' if @figure.titles.include?(title) %> />
      <label for="<%= title.id %>"><%= title.name %></label>
    </p>
  <% end %>
  <input type="checkbox" id="new" name="figure[title]" />
  <label for="new"><input type="text" name="figure[title]" placeholder="New Title" /></label>
  <input type="submit" id="submit" value="submit"/>
</form>


