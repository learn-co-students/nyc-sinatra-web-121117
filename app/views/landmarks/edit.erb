<form action="/landmarks/<%=@landmark.id%>" method="post">
  <input type="hidden" name="_method" value="patch"/>
  <input type="text" name="name" placeholder="Landmark Name" value="<%=@landmark.name%>"/>
  <input type="integer" name="year_completed" placeholder="Year Completed" value="<%=@landmark.year_completed%>"/>
    <% @figures.each do |figure| %>
      <input type="radio" id="<%= figure.id %>" name="figure_id" value="<%= figure.id %>"
        <% if @landmark.figure_id == figure.id %> checked <% end %> />
      <label for="<%= figure.id %>"><%= figure.name %></label>
    <% end %>
  <input type="submit" value="submit">
</form>

<form action="/landmarks/<%=@landmark.id%>" method="post">
    <input type="hidden" name="_method" value="delete"/>
    <input type="submit" value="delete">
</form>
